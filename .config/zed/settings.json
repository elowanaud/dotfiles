{
	// UI
	"theme": "Colorizer Pro",
	"experimental.theme_overrides": {
		"text.muted": "#f0f6fc"
	},
	"icon_theme": "Base Charmed Icons",
	"ui_font_family": ".SystemUIFont",
	"ui_font_size": 15,
	"ui_font_weight": 600,
	"buffer_font_family": "JetBrainsMono Nerd Font Mono",
	"buffer_font_size": 14,

	// Removing unused features
	"global_lsp_settings": { "button": false },
	"outline_panel": { "button": false },
	"collaboration_panel": { "button": false },
	"chat_panel": { "button": "never" },
	"git_panel": { "button": false },
	"notification_panel": { "button": false },
	"agent": { "button": false },
	"debugger": { "button": false },
	"diagnostics": {
		"button": false,
		"inline": {
			"enabled": true,
			"padding": 2
		}
	},
	"title_bar": {
		"show_branch_name": false, // Show/hide branch name
		"show_project_items": false, // Show/hide project host and name
		"show_onboarding_banner": false, // Show/hide onboarding banners
		"show_user_picture": false, // Show/hide user avatar
		"show_sign_in": false // Show/hide sign-in button
	},
	"toolbar": {
		"breadcrumbs": false, // Whether to show breadcrumbs.
		"quick_actions": false, // Whether to show quick action buttons.
		"selections_menu": false, // Whether to show the Selections menu
		"agent_review": false // Whether to show agent review buttons
	},
	"tab_bar": {
		"show_nav_history_buttons": false, // Show/hide history buttons on tab bar
		"show_tab_bar_buttons": false // Show hide buttons (new, split, zoom)
	},
	"tabs": {
		"git_status": true,
		"file_icons": true,
		"show_diagnostics": "all"
	},
	"terminal": { "button": false },
	"project_panel": {
		"default_width": 400,
		"entry_spacing": "standard", // Vertical spacing (comfortable, standard)
		"auto_fold_dirs": false, // Fold dirs with single subdir
		"show_diagnostics": "all"
	},

	// Features
	"max_tabs": 6,
	"soft_wrap": "preferred_line_length", // none, editor_width, preferred_line_length, bounded
	"preferred_line_length": 120, // Column to soft-wrap
	"show_wrap_guides": false,
	"features": {
		"edit_prediction_provider": "none"
	},
	"autosave": {
		"after_delay": {
			"milliseconds": 300
		}
	},

	// Languages
	"languages": {
		"JavaScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TypeScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } }
	},

	"lsp": {
		"tailwindcss-language-server": {
			"settings": {
				"experimental": {
					"classRegex": [
						["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
						["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
					]
				}
			}
		}
	},

	// Misc
	"telemetry": {
		"metrics": false,
		"diagnostics": false
	}
}
